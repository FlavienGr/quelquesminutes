<%- include('../includes/head.ejs') %>
</head>
<body>
  <%- include('../includes/navigation.ejs') %>
  <div class="container-fluid send_new_password">
    <% if(errorMessage) { %>
      <div class="alert alert-danger" role="alert">
         <%= errorMessage %>
        </div>
    <% } %>
    <div class="row">
      <div class="col-4 mx-auto my-3">
        <form action="/change-password/<%= resetToken %>" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <div class="form-group">
              <label for="password">New Password</label>
              <input
              type="password"
              name="password"
              class="form-control"
              id="password-input"
              required
              >
              <small id="passwordHelp" class="form-text text-muted">Minimum 8 characters.</small>
            </div>
            <div class="form-group">
              <label for="confirm-password">Verify New Password</label>
              <input
              type="password"
              name="confirmPassword"
              class="form-control"
              id="confirm-password"
              required>
            </div>
             <button type="submit" class="btn btn-primary">Reset Password</button>
            </div>
            </form>
      </div>
    </div>
  </div>
  <%- include('../includes/footer.ejs') %>
  <%- include('../includes/scripts.ejs') %>
</body>
