<%- include('../includes/head.ejs') %>
<body>
  <%- include('../includes/navigation.ejs') %>
  <div class="container">
      <% if(errorMessage || error) { %>
        <div class="alert alert-danger" role="alert">
           <%= errorMessage || error %>
        </div>
      <% } %>
    <div class="row">
      <div class="col-8 mx-auto">
        <div class="card">
          <form action="/job/create" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="card-header">
                  Job
                </div>
                <div class="card-body">
                  <div class="form-group">
                    <label for="title-input">Title</label>
                      <input
                        type="text"
                        name="title"
                        class="form-control"
                        id="title-input"
                        value="<% if(profileData) { %><%= profileData.title %><% } %>"
                        placeholder="title"
                      >
                  </div>
                  <div class="form-group">
                    <label for="description-input">Description</label>
                      <textarea
                      class="form-control"
                      name="description"
                      id="description-input"
                      ><% if(profileData) { %><%= profileData.description %><% } %>
                      </textarea>
                  </div>
                  <div class="form-group">
                    <label for="street-input">Street</label>
                    <input
                    type="text"
                    class="form-control"
                    id="street-input"
                    name="street"
                    value="<% if(profileData) { %><%= profileData.street %><% } %>"
                    placeholder="1234 Main St"
                  >
                  </div>
                  <div class="form-row">
                    <div class="form-group col-md-6">
                      <label for="city-input">City</label>
                      <input
                      type="text"
                      class="form-control"
                      name="city"
                      id="city-input"
                      value="<% if(profileData) { %><%= profileData.city %><% }%>"
                      >
                    </div>
                    <div class="form-group col-md-2">
                      <label for="zip-input">Zip</label>
                      <input
                      type="text"
                      name="zip"
                      class="form-control"
                      id="zip-input"
                      value="<% if(profileData) { %><%= profileData.zip %><% } %>"
                      >
                    </div>
                  </div>
                </div>

                <button type="submit" class="btn btn-primary">Save</button>
              </form>
            </div>
      </div>
    </div>
  <%- include('../includes/scripts.ejs') %>
</body>
