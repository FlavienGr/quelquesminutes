<%- include('../includes/head.ejs') %>
<body>
  <%- include('../includes/navigation.ejs') %>
<div class="container">
    <% if(errors || errorMessage) { %>
      <div class="alert alert-danger" role="alert">
         <%= errors || errorMessage%>
        </div>
    <% } %>
  <div class="row my-3">
    <div class="col-8 mx-auto">
        <form action="/users/profile/password" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="card">
                <div class="card-header">
                    Change Your Password
                </div>
                <div class="card-body">
                  <div class="form-group col-md-6">
                    <label for="inputPassword4">Old Password</label>
                    <input
                    type="password"
                    class="form-control"
                    id="inputPassword4"
                    placeholder="Password"
                    name="oldPassword"
                    >
                  </div>
                  <div class="form-group col-md-6">
                    <label for="inputPassword4">New Password</label>
                    <input
                    type="password"
                    class="form-control"
                    id="inputPassword4"
                    placeholder="Password"
                    name="newPassword"
                    >
                  </div>
                  <div class="form-group col-md-6">
                    <label for="inputPassword4">Confirm Password</label>
                    <input
                    type="password"
                    class="form-control"
                    id="inputPassword4"
                    placeholder="Password"
                    name="confirmPassword"
                    >
                  </div>

                </div>
                <button type="submit" class="btn btn-primary col-3 my-3 mx-3">Save Password</button>
              </div>
          </form>
    </div>
  </div>
  <div class="row my-3">
    <div class="col-8 mx-auto">
        <form action="/users/profile/email" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="card">
                <div class="card-header">
                    Change Your Email
                </div>
                <div class="card-body">
                  <div class="form-group col-md-6">
                    <label for="inputemail1">New Email</label>
                    <input
                    type="email"
                    class="form-control"
                    id="inputemail1"
                    placeholder="Email"
                    name="newEmail"
                    >
                  </div>
                  <div class="form-group col-md-6">
                    <label for="inputemail2">Confirm Email</label>
                    <input
                    type="email"
                    class="form-control"
                    id="inputemail1"
                    placeholder="Email"
                    name="confirmEmail"
                    >
                  </div>

                </div>
                <button type="submit" class="btn btn-primary col-3 my-3 mx-3">Save Email</button>
              </div>
          </form>
    </div>
  </div>
  <div class="row my-3">
    <div class="col-8 mx-auto">

            <div class="card">
                <div class="card-header">
                    Delete account
                </div>

                  <a href="/users/delete" class="btn btn-primary col-3 my-3 mx-3">Delete account</a>

              </div>
    </div>
  </div>
</div>

  <%- include('../includes/scripts.ejs') %>
</body>
