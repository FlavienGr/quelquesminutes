<%- include('../includes/head.ejs') %>
<body>
  <%- include('../includes/navigation.ejs') %>
<div class="container-fluid settings">
    <% if(errors || errorMessage) { %>
      <div class="alert alert-danger" role="alert">
         <%= errors || errorMessage%>
        </div>
    <% } %>
  <div class="row">
    <div class="col-8 mx-auto">
        <form action="/users/profile/password" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="card">
                <div class="card-header">
                    Change Your Password
                </div>
                <div class="card-body">
                  <div class="form-group col-md-6">
                    <label for="inputPassword1">Old Password</label>
                    <input
                    type="password"
                    class="form-control"
                    id="inputPassword1"
                    name="oldPassword"
                    >
                  </div>
                  <div class="form-group col-md-6">
                    <label for="inputPassword2">New Password</label>
                    <input
                    type="password"
                    class="form-control"
                    id="inputPassword2"
                    name="newPassword"
                    >
                  </div>
                  <div class="form-group col-md-6">
                    <label for="inputPassword3">Confirm Password</label>
                    <input
                    type="password"
                    class="form-control"
                    id="inputPassword3"
                    name="confirmPassword"
                    autocomplete="off"
                    >
                  </div>

                </div>
              </div>
              <button type="submit" class="button_settings">Save Password</button>
          </form>
    </div>
  </div>
  <div class="row">
    <div class="col-8 mx-auto">
        <form action="/users/profile/email" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="card">
                <div class="card-header">
                    Change Your Email
                </div>
                <div class="card-body">
                  <div class="form-group col-md-6">
                    <label for="inputemail1">New Email</label>
                    <input
                    type="email"
                    class="form-control"
                    id="inputemail1"
                    name="newEmail"
                    >
                  </div>
                  <div class="form-group col-md-6">
                    <label for="inputemail2">Confirm Email</label>
                    <input
                    type="email"
                    class="form-control"
                    id="inputemail2"
                    name="confirmEmail"
                    autocomplete="off"
                    >
                  </div>

                </div>
              </div>
              <button type="submit" class="button_settings">Save Email</button>
          </form>
    </div>
  </div>
  <div class="row">
    <div class="col-8 mx-auto">

            <div class="card">
                <div class="card-header">
                    Delete account
                </div>


                <a href="/users/delete" class="button_settings btn_delete col-3 my-3 mx-3">Delete account</a>
              </div>
    </div>
  </div>
</div>
  <%- include('../includes/footer.ejs') %>
  <%- include('../includes/scripts.ejs') %>
</body>
